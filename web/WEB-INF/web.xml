<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <resource-ref>
        <description>connects to dryvesDB</description>
        <res-ref-name>jdbc/dryves</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    
    <jsp-config>
        <jsp-property-group>
            <description>header and footer settings</description>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/WEB-INF/view/*</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <description>admin settings</description>
            <url-pattern>/admin/view/*</url-pattern>
            <url-pattern>/admin/index.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/admin/headerAndSidebar.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/admin/footer.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <description>events overview</description>
            <url-pattern>/events/view/*</url-pattern>
            <url-pattern>/events/eventOverview.jsp</url-pattern> 
            <include-prelude>/WEB-INF/jspf/overview/headerAndSidebar.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/admin/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>

</web-app>
